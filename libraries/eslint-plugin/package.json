{
  "main": "./index.mjs",
  "module": "./index.mjs",
  "name": "@basis/eslint-plugin",
  "description": "A comprehensive ESLint plugin for enforcing coding standards and best practices.",
  "type": "module",
  "engines": {
    "bun": "*"
  },
  "scripts": {
    "build": "bun build:tsc && bun build:fix-extensions",
    "build:tsc": "bun tsc ./index.ts --allowSyntheticDefaultImports --downLevelIteration --esModuleInterop --module ESNext --moduleResolution bundler --outDir ./dist --skipLibCheck",
    "build:fix-extensions": "bun scripts/fix-extensions.ts"
  },
  "dependencies": {
		"@typescript-eslint/eslint-plugin": "^8",
		"@typescript-eslint/parser": "^8",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-plugin-import-order-alphabetical": "^1.0.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react-hooks": "^5.2.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@typescript-eslint/utils": "^8.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.4.1",
    "eslint-plugin-named-import-spacing": "^1.0.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "eslint": "^9.32.0",
    "typescript-eslint": "^8.38.0"
  },
  "devDependencies": {
    "@typescript-eslint/rule-tester": "^8.38.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
